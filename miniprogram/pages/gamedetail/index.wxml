<!--pages/gamedetail/index.wxml-->

<view class='gamedetail'>
  <view class='header'>
    <view class='left' bindtap='competitionHistory'>
      <image src='data:image/png;base64,'></image>
      <view>竞猜历史</view>
    </view>
    <view class='middle'>
      <image src='data:image/png;base64,'></image>
      <text>第一局进行中</text>
    </view>
    <view class='right'>
      <image src='data:image/png;base64,'></image>
      <view>串联清单</view>
    </view>
  </view>
  <view class='live-header'>
    <text class='title'>滚球竞猜</text>
    <view class='times'>
      <countdown countdown='{{timetype}}'>
        <text class='daojishi' slot='title'>竞猜结束倒计时:</text>
      </countdown>
    </view>
  </view>
  <!--主次队-->
  <view class='teams'>
    <view class='hometeam left'>BBQ
      <image src='https://cdn.esportsmatrix.com/lol/Content/images/uploaded/team/778a58ea-fca0-42fe-8c89-6f33aaa8dd3f.png'></image>
    </view>
    <view class='middle'>立即滚球</view>
    <view class='guestteam right'>
      HLE
      <image src='https://cdn.esportsmatrix.com/lol/Content/images/uploaded/team/a2afefb3-c743-436e-a9b6-f13a0767c6fd.png'></image>
    </view>
  </view>
  <!--场次-->
  <view class='field'>
    <view class='left'>第一局</view>
    <view class='middle'>第二局</view>
    <view class='right'>第三局</view>
  </view>
  <!--视频-->
  <view class='live'>
    <view class='updatetime'>
      <text>更新时间:</text>
      <text class='fr'>游戏进行:</text>
    </view>
    <video src='http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400' enable-danmu danmu-btn controls></video>
  </view>
  <!--场次竞猜-->
  <view class='fieldguess'>
    <view class='tab'>
      <view>第一局</view>
      <view>第二局</view>
    </view>
  </view>
  <!--比赛盘口-->
  <view class='matchHandicap'>
    <view class='tab'>
      <view>比赛盘口</view>
      <view>特别盘口</view>
    </view>
    <!--比赛列表-->
    <view class='matchlist' wx:for='{{matchlist}}' wx:key='index'>
      <view class='title'>
        <text class='number'>{{item.num}}</text>
        <text class='text'>{{item.title}}</text>
      </view>
      <view class='homeandguest'>
        <view class='home'>
          <view class='home-a' bindtap='homeTo'>
            <image src='{{item.home.imgurl}}'></image>
            <text>{{item.home.des}}</text>
          </view>
          <view>{{item.home.rates}}</view>
          <view><text>{{item.home.types}}</text></view>
        </view>
        <view class='guest'>
          <view class='guest-a' bindtap='guestTo'>
            <image src='{{item.guest.imgurl}}'></image>
            <text>{{item.guest.des}}</text>
          </view>
          <view>{{item.guest.rates}}</view>
          <view><text>{{item.guest.types}}</text></view>
        </view>
      </view>
      <view></view>
    </view>
  </view>
</view>
