.tx-center{
  text-align: center
}
.shop{
  color: #fff;
  background-color: #000
}
.addmore{
  display: flex
}
.addmore .additem{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
     /* background: -moz-linear-gradient(top, #2378e2 0%, #09448e 100%);
