/*tab*/
.tab{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  /* margin: 0 30rpx; */
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  background: linear-gradient(#292929,#161616);
}
.tab .tab-item{
  flex:1
}
.tab .tab-item.active{
  color:#a9893d
}

